@model Presentacion.Models.ComunicadosViewModel
@Html.ActionLink("Menú principal", "MenuAdminUdelar", "home")
<div style="padding:20px;"></div>
<legend>Crear un nuevo Comunicado</legend>
<center>
    @using (Html.BeginForm()) {
        <fieldset style="width:200px;">

            <div class="editor-label">
                @Html.LabelFor(model => model.Titulo)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Titulo)
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "custom_error" })
            </div>
            <div style="padding:5px;"></div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Texto)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Texto)
                @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "custom_error" })
            </div>
            <div style="padding:5px;"></div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Fecha_Publicacion)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Fecha_Publicacion)
                @Html.ValidationMessageFor(model => model.Fecha_Publicacion, "", new { @class = "custom_error" })
            </div>
            <br />
            <div class="buttons">
                <br />
                <br />
                <input type="submit" value="Agregar" />
            </div>
        </fieldset>
    }
</center>
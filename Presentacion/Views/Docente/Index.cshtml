@model Presentacion.Models.DocenteViewModel
@Html.ActionLink("Menú principal", "MenuAdminFacu", "home")
    |
@Html.ActionLink("Docentes", "Index", "docente")
    |
@Html.ActionLink("Cursos", "Index", "curso")
<div style="padding:20px;"></div>
<legend>Docentes</legend>
<br />
@Html.ActionLink("Crear un nuevo docente", "Add", "Docente")
<br />
<center>
    @using (Html.BeginForm()) {
        <fieldset>


            <br />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Ci)
                        </th>

                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>

                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Apellido)
                        </th>
                        <th scope="col">
                            Opciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.LstCuenta) {
                        <tr>
                            <td>
                                @Html.DisplayFor(item1 => item.Ci)
                            </td>
                            <td>
                                @Html.DisplayFor(item1 => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(item1 => item.Apellido)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "edit", "Docente", new { id = item.Id })
                                /
                                @Html.ActionLink("Eliminar", "delete", "Docente", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to delete?')" })
                                /
                                @Html.ActionLink("Asignar Curso", "asignarCurso", "Docente", new { id = item.Id, ci = item.Ci, nombre = item.Nombre, apellido = item.Apellido })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </fieldset>
    }
</center>
